@model BitirmeProjesi.Models.Projeler


@{
    ViewBag.Title = "AkdProjelerim";

}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <link href="~/Content/font-awesome.css" rel="stylesheet" />

    <link href="~/Content/Style.css" rel="stylesheet" type="text/css" />
</head>

<body class="bga">

    <div class="vertical-nav bg-white" id="sidebar;" style="width:280px;">
        <div class="py-4 px-3 mb-4 bg-light">
            <div class="media d-flex align-items-center">
                <img src="https://www.afmec.org/images/user-icon2.png" alt="..." width="65" class="mr-3 rounded-circle img-thumbnail shadow-sm">
                <div class="media-body">
                    <h4 class="m-0">@Session["AkademisyenAdi"] @Session["AkademisyenSoyadi"]</h4>

                    <p class="font-weight-light text-muted mb-0">Öğretmen ID : @Session["AkademisyenId"]</p>

                </div>
            </div>
        </div>

        <ul class="nav flex-column bg-white mb-0">
            <li class="nav-item">
                <a href="/OgretmenEdit/OgretmenEdit/@Session["AkademisyenId"]" class="nav-link text-dark font-italic bg-light">

                    Profil Ayarları
                </a>
            </li>
            <li class="nav-item">
                <a href="/Akademisyenler/AkdProjelerim/@Session["AkademisyenId"]" class="nav-link text-dark font-italic bg-light">
                    Projelerim
                </a>
            </li>
            <li><a href="/OgrenciLogin/LogOut" style="color:black">Çıkış Yap</a></li>
        </ul>
        <div class="page-content p-5 " id="content">
        </div>
    </div>
    <div id="İcerik">
        <form method="post">

            

            @Html.LabelFor(x => x.ProjeAd)
            @Html.TextBoxFor(x => x.ProjeAd)

            @Html.LabelFor(x => x.ProjeTanimi)
            @Html.TextAreaFor(x => x.ProjeTanimi)


            @Html.LabelFor(x => x.Bölüm_Id)
            @Html.DropDownListFor(x => x.Bölüm_Id, ViewBag.bölümlist as SelectList)

            @Html.LabelFor(x => x.Akademisyen_Id)
            @Html.DropDownListFor(x => x.Akademisyen_Id, ViewBag.akdlist as SelectList)

            @Html.DropDownListFor(x=>x.Öğrenciler.SingleOrDefault(x=>x.Ogrenci_Id == x.Ogrenci_Id), ViewBag.ogrlist as SelectList) 
            


            <button type="submit" class="btn btn-success">Güncelle</button>
        </form>
    </div>
</body>
</html>
